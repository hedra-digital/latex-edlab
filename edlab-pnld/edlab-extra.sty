% Comando para fazer subtítulo
\newcommand{\subtitulo}[1]{\NoCaseChange{\textnormal{\break\normalsize\itshape#1}}}
\newcommand{\autorcapitulo}[1]{
  \begin{flushleft}\MakeUppercase{\footnotesize\lato\vspace*{-1.5cm}#1}\end{flushleft}
\vspace{10mm}\par}

% Definições de disposição de autores e subtítulos
\newcommand{\tocquebratitautor}{, de}
\newcommand{\chapterspecial}[3]{%
  \chapter[#1\ifx#3\relax\else\emph{\tocquebratitautor{} #3}\fi]%
      {#1\ifx#2\relax\else\subtitulo{#2}\fi}%
  \ifx#3\relax\else\autorcapitulo{#3}\fi
\markboth{#1}{#3}}


